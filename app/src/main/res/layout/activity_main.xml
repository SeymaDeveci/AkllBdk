<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09FFFF"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/sayilar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/sayilar" />

    <TextView
        android:id="@+id/txtsayilar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sayilar"
        android:layout_marginLeft="40dp"
        android:text="SAYILAR"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/meyveler"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/meyveler" />

    <TextView
        android:id="@+id/txtmeyveler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meyveler"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="MEYVELER"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/renkler"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:src="@drawable/renkler" />

    <TextView
        android:id="@+id/txtrenkler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/renkler"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:text="RENKLER"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/sekiller"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:src="@drawable/sekiller" />

    <TextView
        android:id="@+id/txtsekiller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sekiller"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="ŞEKİLLER"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/hayvanlar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp"
        android:src="@drawable/hayvanlar" />

    <TextView
        android:id="@+id/txthayvanlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:text="HAYVANLAR"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>